# ---------------------------------------------------------------------------
# Benchmark - Test
# ---------------------------------------------------------------------------

# ---------------------------------------------------------------------------
# Files
# ---------------------------------------------------------------------------

file(GLOB_RECURSE TEST_CC test/*.cpp)
list(REMOVE_ITEM TEST_CC test/tester.cpp)

# ---------------------------------------------------------------------------
# Tester
# ---------------------------------------------------------------------------

add_executable(tester test/tester.cpp ${TEST_CC})
target_link_libraries(tester s3benchmark_lib gtest gmock)
enable_testing()
add_test(s3benchmark_lib tester)

# ---------------------------------------------------------------------------
# Linting
# ---------------------------------------------------------------------------

add_cpplint_target(lint_test "${TEST_CC}")
list(APPEND lint_targets lint_test)
