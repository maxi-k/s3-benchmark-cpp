#!/bin/sh

# Get target from args 
BENCH_TARGET=${1:-"cli"}
BUILD_TARGET=${2:-"s3benchmark_cli_exec"}
FOLDER="cmake-build-$BENCH_TARGET"

# Setup Build folder
rm -rf $FOLDER
mkdir $FOLDER

# Setup cmake
cd $FOLDER
cmake -D BENCH_TARGET=$BENCH_TARGET ..

# Build using cmake
cd ..
cmake --build $FOLDER --target $BUILD_TARGET -- -j 2
